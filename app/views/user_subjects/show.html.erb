<div class="center"><h1><%= @subject.name %></h1></div>
<div>
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-8 colum-right">
        <div class="row">
          <% if @subject.tasks.count > 0 %>
            <%= form_for @user_subject, url: user_subject_path(@user_subject) do |f| %>
              <%= f.hidden_field :subject_id, value: @subject.id %>
                <%= f.fields_for :user_tasks do |builder| %>
                  <div class="col-lg-2">
                    <div class="row">
                      <div class="thumbnail text-center task">
                        <h4><%= builder.object.task.name %></h4>
                        <p><%= builder.check_box :status,
                          {checked: builder.object.finished?}, :finished,
                            builder.object.status %>
                        </p>
                        <%= builder.hidden_field :user_id, value: @user_id %>
                      </div>
                    </div>
                  </div>
                <% end %>
                <div class="col-md-12">
                  <div class="row">
                    <div class="text-center col-md-2">
                      <div class="row">
                        <%= f.submit t(".update"), class: "btn btn-primary" %>
                      </div>
                    </div>
                  </div>
                </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
