<div class="left">
<p>
  <strong><%= t "aplication.model.subject.name" %></strong>
  <%= @subject.name %>
</p>

<p>
  <strong><%= t "aplication.model.subject.start_date" %></strong>
  <%= @subject.start_date %>
</p>

<p>
  <strong><%= t "aplication.model.subject.end_date" %></strong>
  <%= @subject.end_date %>
</p>

<%= link_to t(". edit"), "#", class: "btn btn-primary" %>
<%= link_to t(". back"), supervisor_subjects_path, class: "btn btn-primary" %>
</div>
<div>
  <div class="col-md-6 col-md-offset-3">
<%= form_for [:supervisor, @task] do |f| %>
  <%= render "shared/error_messages", object: @task %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
    <div class="field">
    <%= f.label :content %><br>
    <%= f.text_field :content, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit nil, class: "btn btn-primary" %>
  </div>
<% end %>
<div>
</div>
<div class="right">
<div class = "page-header">
  <h2><%= t ".all_task" %></h2>
  <p><%= link_to t(".new"), new_supervisor_task_path,
    class: "btn btn-primary" %></p>
</div>
<hr>
<table class = "table table-striped">
  <thead>
    <tr>
      <th><%= t ".name" %></th>
      <th><%= t ".content" %></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
