<% provide :title, t("supervisor.users.all_users") %>
<div class = "page-header">
  <h2><%= t "supervisor.users.all_trainees" %></h2>
  <p><%= link_to t(".new"), new_supervisor_user_path %></p>
</div>
<hr>
<table class = "table table-striped">
  <thead>
    <tr>
      <th><%= t "name" %></th>
      <th><%= t "email" %></th>
      <th><%= t "progress"%></th>
      <th><%= t "edit" %></th>
      <th><%= t "delete" %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to t("progress"), "#" %></td>
        <td><%= link_to t("edit"), edit_supervisor_user_path(user) %></td>
        <td><%= link_to t("delete"), supervisor_user_path(user),
          method: :delete, data: {confirm: t(".confirm")} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
