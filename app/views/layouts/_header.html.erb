<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".framgia"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home"), root_path %></li>
        <li><%= link_to t(".help"), "#" %></li>
        <% if logged_in? %>
          <% if current_user.trainee? %>
             <li><%= link_to t(".alltrainee"), users_path %></li>
          <% elsif current_user.supervisor? %>
            <li><%= link_to t(".user"), new_supervisor_user_path %></li>
            <li><%= link_to t(".alluser"), supervisor_users_path %></li>
            <li><%= link_to t(".allsubject"), supervisor_subjects_path %></li>
            <li><%= link_to t(".admin_course"), supervisor_courses_path %></li>
          <% else %>
            <li><%= link_to t(".admin_course"), supervisor_courses_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t ".account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".logout"), logout_path %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
